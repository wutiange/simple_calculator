<!--index.wxml-->
<view class="container">
  <!-- 显示区 -->
  <view class="show">
    <text>{{inputStr}}</text>
  </view>
  <!-- 输入区 -->
  <view class="input">
    <text>{{currentDigit}}</text>
  </view>
  <!-- 按钮区 -->
  <view class="btn-container">
    <!-- AC +/- % / -->
    <view class="ope-container">
      <text bind:tap="bac" class="con btn">AC</text>
      <text bind:tap="bSign" class="btn con">+/−</text>
      <text bind:tap="bRemainder" class="btn con">%</text>
      <text bind:tap="bDivision" class="ope btn">÷</text>
    </view>
    <!-- 7 8 9 x -->
    <view class="ope-container">
      <text bind:tap="b7" class="btn">7</text>
      <text bind:tap="b8" class="btn">8</text>
      <text bind:tap="b9" class="btn">9</text>
      <text bind:tap="bMultiplication" class="ope btn">×</text>
    </view>
    <!-- 4 5 6 - -->
    <view class="ope-container">
      <text bind:tap="b4" class="btn">4</text>
      <text bind:tap="b5" class="btn">5</text>
      <text bind:tap="b6" class="btn">6</text>
      <text bind:tap="bSubtraction" class="ope btn">−</text>
    </view>
    <!-- 1 2 3 + -->
    <view class="ope-container">
      <text bind:tap="b1" class="btn">1</text>
      <text bind:tap="b2" class="btn">2</text>
      <text bind:tap="b3" class="btn">3</text>
      <text bind:tap="bAddition" class="ope btn">+</text>
    </view>
    <!-- 0 . = -->
    <view class="ope-container">
      <text bind:tap="b0" class="btn zero">0</text>
      <text bind:tap="bPoint" class="btn">.</text>
      <text bind:tap="bequal" class="ope btn">=</text>
    </view>
  </view>
</view>
